{
    "name": "impa-labs",
    "build": {
        "context": ".",
        "dockerfile": "docker/Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "mikestead.dotenv",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            }
        }
    },
    "forwardPorts": [
        8000,
        8080
    ],
    "onCreateCommand": "pip-compile dev-requirements.in",
    "postCreateCommand": "pip install --no-cache-dir --force-reinstall --no-deps -r dev-requirements.txt && pip install --no-cache-dir -r dev-requirements.txt",
    "otherPortsAttributes": {
        "onAutoForward": "silent"
    },
    "runArgs": [
        "--rm"
    ]
}